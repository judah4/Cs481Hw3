            <Label Grid.Row="2" Grid.Column="0" Text="20"/>
            <Label Grid.Row="2" Grid.Column="1" Text="21"/>

            <Label Grid.Row="3" Grid.Column="0" Text="30"/>
            <Label Grid.Row="3" Grid.Column="1" Text="31"/>

            <Label Grid.Row="4" Grid.Column="0" Text="10"/>
            <Label Grid.Row="4" Grid.Column="1" Text="11"/>-->

            <Button Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="3" Text="Finish" Clicked="Button_OnClicked" />
        </Grid>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>