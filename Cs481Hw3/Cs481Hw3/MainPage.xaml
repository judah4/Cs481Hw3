<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Cs481Hw3"
             x:Class="Cs481Hw3.MainPage"
             Title="Quiz">
    <StackLayout>
        <Label Text="How much do you know about programming?" 
           VerticalOptions="Center" 
           HorizontalOptions="Center" FontSize="25" />
        <Label Text="Enter your name and start" 
           VerticalOptions="Center" 
           HorizontalOptions="Center" FontSize="25" />
        <Entry x:Name="NameEntry" Placeholder="name" />
        <Button Clicked="Button_OnClicked" Text="Continue" ></Button>
    </StackLayout>
	
</ContentPage>